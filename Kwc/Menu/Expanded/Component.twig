{% if menu|length %}
    <nav class="{{ rootElementClass }}">
        {% if parentPage %}
            {% block parentPageName %}
            <h2 class="parentPageName">{{ parentPage.name }}</h2>
            {% endblock %}
        {% endif %}
        <ul class="menu">
            {% for m in menu %}
                {{ m.preHtml|raw }}
                <li class="{{ m.class }}">
                    {% if m.isFirstChildPage %}
                        <p>{{ m.data.name|replace('{name}', m.data.name) }}</p>
                    {% else %}
                        {% block menuLink %}
                        {{ renderer.componentLink(m.data) }}
                        {% endblock %}
                    {% endif %}
                    {% if m.submenu|length %}
                        <ul class="subMenu">
                            {% for sm in m.submenu %}
                                {{ sm.preHtml|raw }}
                                <li class="{{ sm.class }}">
                                    {% block subMenuLink %}
                                    {{ renderer.componentLink(sm.data, sm.text) }}
                                    {% endblock %}
                                </li>
                                {{ sm.postHtml|raw }}
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
                {{ m.postHtml|raw }}
            {% endfor %}
        </ul>
        <div class="kwfUp-clear"></div>
    </nav>
{% endif %}
